" Copy paste between vim and system clipboard
set clipboard=unnamedplus

" enable 256 colors
set t_Co=256
set t_ut=

" turn on line numbering
set number

" sane text files
set fileformat=unix
set encoding=utf-8
set fileencoding=utf-8

" sane editing
set tabstop=4
set shiftwidth=4
set softtabstop=4
set colorcolumn=100
set expandtab

" code folding
set foldmethod=indent
set foldlevel=99
